struct Pair {
    i32 a;
    i32 b;
};

Pair globalPair = {};

fun updateGlobals() -> void {
    globalPair.a = globalPair.a + 2;
    globalPair.b = 10;
}

fun sumPair(Pair value) -> i32 {
    Pair local = value;
    local.a = local.a + 3;
    return local.a + local.b;
}

fun main() -> i32 {
    globalPair.a = 1;
    globalPair.b = 4;
    updateGlobals();
    Pair snapshot = globalPair;
    return sumPair(snapshot);
}
